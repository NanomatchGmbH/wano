<WaNoTemplate>
 <WaNoRoot name="RangeExpander">
 <WaNoTabs name="TABS">

 <WaNoGroup name="Morphology">
  <WaNoInt name="Number of Molecules">8000</WaNoInt>
  <WaNoFile logical_filename="COM.dat" name="Morphology ((x,y,z)[A], 3 columns)">Put file here</WaNoFile>
  <WaNoBool name="Expand morphology">True</WaNoBool>
 </WaNoGroup>
 <WaNoGroup name="Transfer integrals">
  <WaNoBool name="Expand transfer integrals">True</WaNoBool>
  <WaNoInt name="Max hopping targets">30</WaNoInt>
  <WaNoFile logical_filename="J.dat" name="J distribution (r[A],J[eV], 2 columns)">Put file here</WaNoFile>
 </WaNoGroup>
 </WaNoTabs>
 </WaNoRoot>

 <WaNoExecCommand>bash ./start_LF.sh</WaNoExecCommand>

 <WaNoInputFiles>
   <WaNoInputFile logical_filename="settings">settings</WaNoInputFile>
   <WaNoInputFile logical_filename="start_LF.sh">start_LF.sh</WaNoInputFile>
 </WaNoInputFiles>
 <WaNoOutputFiles>
    <WaNoOutputFile>topology.npz</WaNoOutputFile>
 </WaNoOutputFiles>
</WaNoTemplate>
