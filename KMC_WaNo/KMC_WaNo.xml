<WaNoTemplate>
	<WaNoRoot name="Mesh_KMC">
		<WaNoDictBox name="Simulation method">
			<WaNoBool name="Use FRM method">True</WaNoBool>
			<WaNoInt name="Number of processes">8</WaNoInt>
			<WaNoInt name="Number of subgroups">2</WaNoInt>
		</WaNoDictBox>

		<WaNoDictBox name="Input files">
			<WaNoBool name="Load pair file">True</WaNoBool>
			<WaNoFile name="Pair file">pair_energies.dat</WaNoFile>
			<WaNoFile name="Morphology file">geometry.dat</WaNoFile>
			<WaNoFile name="Energetics file">energetics.dat</WaNoFile>
			<WaNoFile name="Neighbour file">neighbours.dat</WaNoFile>
		</WaNoDictBox>

		<WaNoDictBox name="Parameters">
			<WaNoInt name="Number of sites">100000</WaNoInt>
			<WaNoChoice name="Simulation length measurement">
				<Entry id="0" chosen="True">Measure by steps</Entry>
				<Entry id="1">Measure by simulation time</Entry>
			</WaNoChoice>
			<WaNoInt name="Simulation length">100</WaNoInt>
			<WaNoFloat name="Temperature [K]">300</WaNoFloat>
			<WaNoFloat name="Relative permitivitty">3.5</WaNoFloat>
			<WaNoFloat name="Reorganisation energy [eV]">0.53</WaNoFloat>
		</WaNoDictBox>

		<WaNoDictBox name="Injection settings">
			<WaNoBool name="Inject electrons">False</WaNoBool>
			<WaNoBool name="Inject holes">True</WaNoBool>
		</WaNoDictBox>

		<WaNoDictBox name="Applied bias settings">
			<WaNoChoice name="n-type electrode is the..">
				<Entry id="0">Cathode - electron emitter</Entry>
				<Entry id="1">Anode - electron acceptor</Entry>
			</WaNoChoice>
			<WaNoFloat name="V n-type">0.0</WaNoFloat>
			<WaNoFloat name="V p-type">0.0</WaNoFloat>
		</WaNoDictBox>

		<WaNoDictBox name="Measurement settings">
			<WaNoChoice name="Observable measuring method">
				<Entry id="0" chosen="True">Count measuring points in time</Entry>
				<Entry id="1">Count measuring points in steps</Entry>
			</WaNoChoice>
			<WaNoInt name="Measuring interval">100</WaNoInt>
			<WaNoBool name="Measure MSD">True</WaNoBool>
			<WaNoBool name="Measure components of MSD">True</WaNoBool>
		</WaNoDictBox>

		<WaNoDictBox name="Device size">
			<WaNoFloat name="Lx [nm]">45.0</WaNoFloat>
			<WaNoFloat name="Ly [nm]">45.0</WaNoFloat>
			<WaNoFloat name="Lz [nm]">45.0</WaNoFloat>
		</WaNoDictBox>

		<WaNoDictBox name="Save/Load settings">
			<WaNoBool name="Seed particles">True</WaNoBool>
			<WaNoInt name="Seed electrons">0</WaNoInt>
			<WaNoInt name="Seed holes">5</WaNoInt>
			<WaNoBool name="Load files">False</WaNoBool>
			<WaNoBool name="Save files">True</WaNoBool>
			<WaNoString name="Save path">Path for saved states</WaNoString>
		</WaNoDictBox>
	</WaNoRoot>
	<WaNoExecCommand>
		bash exec.sh
	</WaNoExecCommand>
	<WaNoInputFiles>
		<WaNoInputFile logical_filename="simulation.ini">input_template.dat</WaNoInputFile> 
		<WaNoInputFile logical_filename="exec.sh">exec_script.sh</WaNoInputFile>
	</WaNoInputFiles>
	<WaNoOutputFiles>
	</WaNoOutputFiles>
</WaNoTemplate>
