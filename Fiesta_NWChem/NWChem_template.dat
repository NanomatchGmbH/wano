start WaNo_FIESTA_NW
title "WaNo NWChem calculation for FIESTA"

geometry units angstroms noautoz nocenter noautosym
load format xyz molecule.xyz
end

basis spherical
   * library {{ wano["Basis"]["DFT Basis-set"] }}
end

dft
 XC {{ wano["Functional"] }}
 iterations 100
 direct
 grid xfine 
end

property
{% if wano["Partial charges Analysis"]["Mulliken charges"] %}mulliken{% endif %}
dipole
quadrupole
end

task dft property

{% if wano["Partial charges Analysis"]["ESP fit"] %}task esp{% endif %}
