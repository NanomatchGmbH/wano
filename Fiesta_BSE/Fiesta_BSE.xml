<WaNoTemplate>
 <WaNoRoot name="FIESTA_BSE">
 
  <WaNoDictBox name="Parallelization Parameters"> 
    <WaNoInt name="Number of columns">4</WaNoInt>  
    <WaNoInt name="Number of rows">4</WaNoInt>    
  </WaNoDictBox>
  
  <WaNoDictBox name="BSE">
    <WaNoInt name="Number of iterations">40</WaNoInt>  
    <WaNoInt name="Number of excitons">20</WaNoInt>    
    <WaNoFloat name="Energy cut (eV)">20.0</WaNoFloat>
    <WaNoBool name="Tamm Dancoff Approximation">false</WaNoBool>
    <WaNoBool name="Triplet (otherwise Singlet)">false</WaNoBool> 
  </WaNoDictBox>
  
 </WaNoRoot>

 <WaNoExecCommand>bash ./exec.script
 </WaNoExecCommand>

 <WaNoInputFiles>
   <WaNoInputFile logical_filename="exec.script">exec_template.dat</WaNoInputFile>
   <WaNoInputFile logical_filename="Fiesta.in">Fiesta_template.dat</WaNoInputFile>   
 </WaNoInputFiles>

 <WaNoOutputFiles>
    <WaNoOutputFile>log_bse</WaNoOutputFile>
 </WaNoOutputFiles>

</WaNoTemplate>